@model GeekShopping.Web.Models.ProductModel

<form action="/delete" method="post">
    <br/>
    <input type="hidden" asp-for="Id">
    <div class="container border p-3">
        <h1 class="text-primary">Apagar Produto</h1>

        <hr/>
        <div class="row">
            <div asp-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control"/>
                <span asp-for="Name" class="text-danger"/>
            </div>
            <div class="col-2">
                <label asp-for="Category_name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Category_name" disabled class="form-control" />
                <span asp-for="Category_name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled class="form-control" rows="5"></textarea>
                <span asp-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Image_url" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image_url" disabled class="form-control" />
                <span asp-for="Image_url" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" />
                <span asp-for="Price" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}